<div class="container">
  <div class="row">
    <div class="col-lg-3">
               <!-- 共通部分 -->
               <%= render 'books/list', book: @book , user: @user %>

	</div>

        <div class="col-lg-9">

			 <h2>Books</h2>
			<table class="table table-striped">
				<tr>
					<th></th><th>title</th><th>opinion</th>
				</tr>
			     <% @books.each do |book| %>
				<tr>
					<td><%= link_to user_path(book.user.id), class: "user_#{book.user.id}" do %>
