<font color="#00CC00"><%= flash[:notice] %></font>
<div class="container">
  <div class="row">
        <div class="col-lg-3">
               <!-- 共通部分 -->
               <%= render 'books/list', book: @book , user: @user %>
	    </div>

		 <div class="col-lg-9">

			 <h2>Books</h2>
			 <table class="table table-striped">
				<tr>
					<th></th><th>title</th><th>opinion</th>
				</tr>
				<% @books.each do |book| %>
				<tr>
					<td><%= attachment_image_tag book.user, :image, :fill, 60, 60, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %></td>
					<td><%= link_to book_path(book.id), class: "book_#{book.id}" do %><%= book.title %></td><% end %>
					<td><%= book.opinion %></td>
				</tr>
				<% end %>
      		</table>

        </div>
    </div>
</div>