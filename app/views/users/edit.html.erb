
<div class="container">
  <div class="row">
  	<div class="col-lg-1"></div>
	 <div class="col-lg-6">

  <% if @user.errors.any? %>
        <div id="error_explanation"></div>
          <h2 class="text-danger"><%= @user.errors.count %>errors prohibited this obj from being saved:
</h2>
          <ul>
        <% @user.errors.full_messages.each do |message| %>
            <li class="text-danger"><%= message %></li>
        <% end %>
         </ul>
  <% end %>

<h1>User info</h1><br>
<%= form_for(@user) do |f| %>
<span>name </span><%= f.text_field :name, class: "name" , placeholder: "name" %><br>
<p>image</p><%= f.attachment_field :image, class: "user_image" , placeholder: "プロフィール画像" %><br>
<span>introduction</span><%= f.text_area :introduction, class: "introduction" , placeholder:"introduction" %><br>
<%= f.submit "Update User" %>
<% end %>

</div>
<div class="col-lg-5"></div>
</div>

</div>
