
<div class="container">
  <div class="row">
    <div class="col-lg-8">
<h2>Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name, class: "name" , autofocus: true, autocomplete: "name" %>
  </div><br>

  <div class="field">
    <%= f.label :password %><br />
    <%= f.password_field :password, class: "password" , autocomplete: "current-password" %>
  </div>
  <br>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div><br>
  <% end %>

    <%= f.submit "Log in" , class: 'btn btn-primary' %>

<% end %>

<%= render "devise/shared/links" %>
</div>
</div>
</div>

