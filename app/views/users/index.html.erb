<div class="container">
  <div class="row">
        <div class="col-lg-3">
               <!-- 共通部分 -->
               <%= render 'books/list', book: @book, user: @user %>
	    </div>

		 <div class="col-lg-9">

			 <h2>User</h2>
			 <table class="table table-striped">
				<tr>
					<th></th><th>name</th><th></th>
				</tr>
				<% @users.each do |user| %>
				<tr>
					<td><%= attachment_image_tag user, :image, :fill, 60, 60, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %></td>
					<td><%= user.name %></td><td><%= link_to "show", user_path(user.id), class: "user_#{user.id}" %></td>
				</tr>
				<% end %>
      		</table>

        </div>
    </div>
</div>